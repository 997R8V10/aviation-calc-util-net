<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyVersion>1.0.3</AssemblyVersion>
    <FileVersion>1.0.3</FileVersion>
    <Platforms>x86;x64;arm64</Platforms>
	<RuntimeIdentifiers>win-x86;win-x64;win-arm64;linux-x64;linux-arm;linux-arm64;osx-x64</RuntimeIdentifiers>
    <Version>1.0.3</Version>
    <Authors>Prithvi Shivaraman</Authors>
    <Description>.NET Wrapper for Aviation Calc Util Native Library</Description>
    <Summary>.NET Wrapper for Aviation Calc Util Native Library</Summary>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageId>PShivaraman.AviationCalcUtilNet.win-$(Platform)</PackageId>
    <PackageTags>aviationcalc aviationcalcutilnet</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryUrl>https://github.com/997R8V10/aviation-calc-util-net.git</RepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AssemblyName>AviationCalcUtilNet</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="AviationCalcUtilNetTests\**" />
    <Compile Remove="build\**" />
    <Compile Remove="out\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="AviationCalcUtilNetTests\**" />
    <EmbeddedResource Remove="build\**" />
    <EmbeddedResource Remove="out\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="AviationCalcUtilNetTests\**" />
    <None Remove="build\**" />
    <None Remove="out\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="README.md" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="PShivaraman.AviationCalcUtil.win-$(Platform)" Version="1.0.3" Condition="$([MSBuild]::IsOSPlatform('Windows'))" />
    <PackageReference Include="PShivaraman.AviationCalcUtil.osx-$(Platform)" Version="1.0.3" Condition="$([MSBuild]::IsOSPlatform('OSX'))" />
    <PackageReference Include="PShivaraman.AviationCalcUtil.linux-$(Platform)" Version="1.0.3" Condition="$([MSBuild]::IsOSPlatform('Linux'))" />
  </ItemGroup>

</Project>
